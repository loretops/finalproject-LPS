{
  "name": "coopco",
  "version": "0.1.0",
  "description": "Plataforma exclusiva para club privado de inversores inmobiliarios",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "(lsof -t -i:3001 | xargs kill -9 || true) && cd frontend && next dev -p 3001",
    "dev:backend": "(lsof -t -i:8001 | xargs kill -9 || true) && cd backend && nodemon server.js",
    "build": "cd frontend && npm run build",
    "start": "node backend/server.js",
    "test": "jest",
    "lint": "eslint .",
    "test:unit": "echo \"Error: no test specified\" && exit 1"
  },
  "prisma": {
    "seed": "node backend/prisma/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^5.5.2",
    "bcrypt": "^5.1.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "next": "^14.0.3",
    "prisma": "^5.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-port-killer": "^1.4.0",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true
}
