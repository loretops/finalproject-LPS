{
  "name": "coopco",
  "version": "0.1.0",
  "description": "Plataforma exclusiva para club privado de inversores inmobiliarios",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "(lsof -t -i:3001 | xargs kill -9 || true) && cd frontend && next dev -p 3001",
    "dev:backend": "(lsof -t -i:8001 | xargs kill -9 || true) && cd backend && nodemon server.js",
    "build": "cd frontend && npm run build",
    "start": "node backend/server.js",
    "test": "jest",
    "lint": "eslint .",
    "test:unit": "echo \"Error: no test specified\" && exit 1",
    "test:e2e": "cypress run",
    "cypress:open": "cypress open"
  },
  "prisma": {
    "seed": "node backend/prisma/seed.js"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.2",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^5.5.2",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "fs-extra": "^11.3.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "mime-types": "^3.0.1",
    "multer": "^1.4.5-lts.2",
    "next": "^14.0.3",
    "nodemailer": "^6.10.1",
    "path": "^0.12.7",
    "prisma": "^5.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "sharp": "^0.34.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "autoprefixer": "^10.4.21",
    "axios-mock-adapter": "^2.1.0",
    "chai": "^5.2.0",
    "concurrently": "^8.2.2",
    "cross-port-killer": "^1.4.0",
    "cypress": "^14.3.3",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "nodemon": "^3.0.1",
    "postcss": "^8.5.3",
    "sinon": "^20.0.0",
    "supertest": "^7.1.0",
    "tailwindcss": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true
}
